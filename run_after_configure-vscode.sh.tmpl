#!/bin/bash
set -eufo pipefail

installed_extensions=$(code --list-extensions)

{{ range $extensions -}}
if ! echo "$installed_extensions" | grep -qF "{{ . }}"; then
    echo "## Installing {{ . }}..."
    code --force --install-extension {{ . }}
else
    echo "## {{ . }} is already installed."
fi
{{ end -}}

{{ end -}}